
@model MyLibrary.Models.Book
@{
    ViewBag.Title = "Create";
    Layout = null;
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Books_Operations.css" />
</head>

<body>
    <h2>Create</h2>
    <div class="main-form">
        <form method="post" action="">
            @Html.AntiForgeryToken()
            <input type="text" name="Title" placeholder="Title" />
            <input type="text" name="Author" placeholder="Author" />
            <input type="number" name="Release_year" placeholder="Release year" />
            <input type="text" name="Publishment" placeholder="Publishment" />
            <input type="text" name="Content" placeholder="Content" />
            <input type="number" step="0.01" name="Price" placeholder="Price" />
            <input type="text" name="Genre" placeholder="Genre" />
            <input type="number" name="Amount_of_coming" placeholder="Amount of coming" />
            <input type="number" name="Inventary_number" placeholder="Inventary number" />
            <input type="datetime-local" name="Date_of_coming" placeholder="Date of coming" />
            <p>
                <label style="color: #b83b5e; font-size:15px">Availability:</label>
                @Html.EditorFor(model => model.Availability)
            </p>


            <input type="submit" value="Create" />
            <div>
                <a class="link" href="/Books/Index">Back to List</a>
            </div>
        </form>
    </div>
</body>