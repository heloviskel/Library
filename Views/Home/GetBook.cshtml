@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Отримання книги</title>
</head>
<body>
    <div>
        <h3>Форма оформлення видачі книги</h3>
        <form method="post">
            <input type="hidden" value="@ViewBag.BookId" name="BookId" />
            <table>
                <tr>
                    <td>Name: </td>
                    <td><input type="text" name="Name" /></td>
                </tr>
                <tr>
                    <td>Adress: </td>
                    <td><input type="text" name="Adress" /></td>
                </tr>
                <tr>
                    <td>Birth year</td>
                    <td><input type="number" name="Birth year" /></td>
                </tr>
                <tr>
                    <td>Tel.number</td>
                    <td><input type="number" name="Tel.number" /> </td>
                </tr>
                <tr>
                    <td>Giveaway date</td>
                    <td><input type="datetime-local" name="Giveaway date" /></td>
                </tr>
                <tr><td><input type="submit" name="Відправити дані" /></td></tr>
            </table>
        </form>
    </div>
</body>
</html>
