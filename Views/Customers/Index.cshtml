@model IEnumerable<MyLibrary.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Table.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Menu.css" />
</head>
<body>
    <h1>&lt;Customers&gt;</h1>
    <a href="/Home/Index" class="btn">Home</a>
    <a href="/Books/Index" class="btn">Books</a>
    <a href="/Customers/Create" class="btn">Add new Customer</a>
    <br /><br /><br />
    <table class="container">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Giveaway_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birth_year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tel__number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Returning_date)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Giveaway_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birth_year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tel__number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Returning_date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Customer_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Customer_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Customer_ID })
                </td>
            </tr>
        }

    </table>
</body>
</html>
