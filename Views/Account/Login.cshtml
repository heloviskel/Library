@model MyLibrary.Models.LoginModel
@{
    Layout = null;
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Menu.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Sign Up_In.css"/>
</head>

<body>
    <div class="main-form"style="margin-top:1px">
        <i class="logo"></i>
        <h2>Sign In</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div>
                @Html.LabelFor(model => model.Name)
                <div>
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div>
                @Html.LabelFor(model => model.Password)
                <div>
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <br />
            <div>
                <input type="submit" value="Login" class="btn" />
            </div>
            <br /><br />
            <div>
                <a href="/Account/Register"class="btn">Sign Up</a>
            </div>
        }
    </div>
</body>
